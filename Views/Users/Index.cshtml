@model IEnumerable<Turma_5413_TP_BrunoSilva.Models.UserViewModel>

<div class="container mt-5">
    <h2 class="text-light">User Management</h2>
    <table class="table table-dark table-striped table-responsive">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-custom btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-custom btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-custom" asp-action="Create">Create New User</a>
</div>
