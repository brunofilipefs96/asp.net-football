@page
@model Turma_5413_TP_BrunoSilva.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light">
                <div class="card-header text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group mb-3">
                            <label for="login" class="control-label">Username / Email</label>
                            <input asp-for="Input.Login" id="login" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Input.Login" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="control-label"></label>
                            <input asp-for="Input.Password" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <button type="submit" class="btn btn-custom">Log in</button>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <a class="btn btn-secondary" asp-page="./Register">Register as a new user</a>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <a class="btn btn-secondary" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
