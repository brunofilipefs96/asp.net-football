@page
@model Turma_5413_TP_BrunoSilva.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light">
                <div class="card-header text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Input.Username" class="control-label"></label>
                            <input asp-for="Input.Username" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="control-label"></label>
                            <input asp-for="Input.Email" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="control-label"></label>
                            <input asp-for="Input.Password" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <button type="submit" class="btn btn-custom">Register</button>
                        </div>
                        <div class="form-group mb-3 text-center">
                            <a class="btn btn-secondary" asp-page="./Login">Already have an account? Log in</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
